<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- LOCAL DEVELOPER CONSOLE -->
	<!-- REQUIRED DEPENDENCY: group: 'com.github.berkesa', name: 'moleculer-java-repl', version: '1.0.1' -->
	<!-- URL: https://mvnrepository.com/artifact/com.github.berkesa/moleculer-java-repl -->
	
	<bean id="$repl" class="services.moleculer.repl.LocalRepl" />
	
		<!-- Packages of custom commands -->	
		<property name="packagesToScan"><null/></property>
		
	</bean>

</beans>